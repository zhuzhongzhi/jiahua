<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xgit.iot.dao.mapper.system.IusAccountMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xgit.iot.dao.entity.system.IusAccountDO">
        <id column="user_id" property="userId" />
        <result column="login_name" property="loginName" />
        <result column="last_login_time" property="lastLoginTime" />
        <result column="last_login_ip" property="lastLoginIp" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!--查询信息-->
    <select id="select" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM ius_account  WHERE `user_id` = #{userId}
    </select>
    
    <!--批量删除-->
    <delete id="remove" parameterType="java.util.List">
        DELETE FROM ius_account
        WHERE `user_id` IN
        <foreach collection="list" item="userIds" open="(" separator="," close=")">
            #{userIds}
        </foreach>
    </delete>


    <update id="updateForUser" parameterType="com.xgit.iot.dao.entity.system.IusAccountDO">
        UPDATE ius_account
        <set>
            <if test="loginName != null">
                `login_name` = #{loginName},
            </if>
            <if test="updateTime != null">
                `update_time` = #{updateTime},
            </if>
        </set>
        WHERE `user_id` = #{userId}
    </update>

    <!--添加终端-->
    <insert id="add" parameterType="com.xgit.iot.dao.entity.system.IusAccountDO">
        INSERT INTO ius_account
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                `user_id`,
            </if>
            <if test="loginName != null">
                `login_name`,
            </if>
            <if test="lastLoginTime != null">
                `last_login_time`,
            </if>
            <if test="lastLoginIp != null">
                `last_login_ip`,
            </if>
            <if test="status != null">
                `status`,
            </if>
            <if test="createTime != null">
                `create_time`,
            </if>
            <if test="updateTime != null">
                `update_time`,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="loginName != null">
                #{loginName},
            </if>
            <if test="lastLoginTime != null">
                #{lastLoginTime},
            </if>
            <if test="lastLoginIp != null">
                #{lastLoginIp},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
        </trim>
    </insert>

</mapper>