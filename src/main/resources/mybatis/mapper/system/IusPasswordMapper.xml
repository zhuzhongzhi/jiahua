<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xgit.iot.dao.mapper.system.IusPasswordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xgit.iot.dao.entity.system.IusPasswordDO">
        <id column="user_id" property="userId"/>
        <result column="password" property="password"/>
        <result column="update_time" property="updateTime"/>
        <result column="type" property="type"/>
    </resultMap>

    <!--批量删除-->
    <delete id="remove" parameterType="java.util.List">
        DELETE FROM ius_password
        WHERE `user_id` IN
        <foreach collection="list" item="userIds" open="(" separator="," close=")">
            #{userIds}
        </foreach>
    </delete>

    <update id="updateForUser" parameterType="com.xgit.iot.dao.entity.system.IusPasswordDO">
        UPDATE ius_password
        <set>
            <if test="password != null">
                `password` = #{password},
            </if>
            <if test="updateTime != null">
                `update_time` = #{updateTime},
            </if>
            <if test="type != null">
                `type` = #{type},
            </if>
        </set>
        WHERE `user_id` = #{userId}
    </update>

    <!--添加终端-->
    <insert id="add" parameterType="com.xgit.iot.dao.entity.system.IusPasswordDO">
        INSERT INTO ius_password
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                `user_id`,
            </if>
            <if test="password != null">
                `password`,
            </if>
            <if test="updateTime != null">
                `update_time`,
            </if>
            <if test="type != null">
                `type`,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="type != null">
                #{type},
            </if>

        </trim>
    </insert>
</mapper>